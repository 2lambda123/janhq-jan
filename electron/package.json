{
  "name": "jan-electron-app",
  "version": "1.0.0",
  "description": "Hello World!",
  "main": "./build/main.js",
  "author": "Jan",
  "license": "MIT",
  "build": {
    "appId": "jan.ai.app",
    "productName": "Jan Desktop App",
    "asarUnpack": [
      "node_modules",
      "electron/core"
    ],
    "files": [
      "out/**/*",
      "build/main.js",
      "build/preload.js",
      "electron/core"
    ],
    "extends": null,
    "mac": {
      "type": "distribution"
    }
  },
  "scripts": {
    "dev": "tsc -p . && electron .",
    "electron:start": "concurrently \"yarn dev\" \"wait-on http://localhost:3000 && tsc -p . && electron .\"",
    "electron:build:all": "yarn build && electron-builder build --publish never -mwl"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "pluggable-electron": "^0.6.0",
    "request": "^2.88.2",
    "request-progress": "^3.0.0",
    "node-llama-cpp": "^2.4.1"

  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.0.1"
  }
}
