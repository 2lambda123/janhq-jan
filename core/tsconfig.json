{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2022",
    "module": "ES2020",
    "lib": ["es2018", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "importHelpers": true,
    "types": ["@types/jest"],
  },
  "include": ["src"],
}
