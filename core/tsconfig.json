{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES6",
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "./src"
  },
  "include": ["./src"],
  "exclude": ["lib", "node_modules", "**/*.test.ts", "**/__mocks__/*"]
}
