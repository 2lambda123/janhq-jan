{
  "name": "jan-app",
  "private": true,
  "workspaces": {
    "packages": [
      "electron",
      "web"
    ],
    "nohoist": [
      "electron",
      "electron/plugins",
      "electron/plugins/**",
      "electron/**",
      "web",
      "web/**"
    ]
  },
  "scripts": {
    "dev:electron": "yarn workspace jan-electron dev",
    "dev:web": "yarn workspace jan-web dev",
    "dev": "concurrently --kill-others-on-fail \"yarn dev:web\" \"wait-on http://localhost:3000 && yarn dev:electron\"",
    "build:web": "yarn workspace jan-web build",
    "build:electron": "yarn workspace jan-electron build",
    "build": "rimraf ./electron/renderer/* && yarn build:web && cpx \"web/out/**\" \"electron/renderer/\" && yarn build:electron",
    "publish:electron": "yarn workspace jan-electron publish"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "cpx": "^1.5.0",
    "rimraf": "^5.0.4",
    "wait-on": "^7.0.1"
  },
  "dependencies": {}
}
